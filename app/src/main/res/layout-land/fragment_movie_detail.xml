<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marquee">

    <LinearLayout
        android:id="@+id/detailLinearLayoutFirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textviewTitleMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight=".1"
            android:gravity="center"
            android:lineSpacingMultiplier=".8"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="0dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:textColor="#ffffffff"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageviewPoster"
                android:layout_width="154dp"
                android:layout_height="231dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textviewReleaseDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:shadowColor="#000000"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="15"
                            android:textColor="#ffffffff"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textviewRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:gravity="left"
                            android:shadowColor="#000000"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="15"
                            android:textColor="#ffffffff"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/btnFavorite"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@android:drawable/btn_star"
                            android:background="#00ffffff"
                            />
                        <TextView
                            android:id="@+id/labelFavorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:labelFor="@id/btnFavorite"
                            android:text="@string/favoriteLabel"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textviewSynopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:password="false"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="15"
                    android:textColor="#ffffff"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    android:paddingBottom="30dp"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>
